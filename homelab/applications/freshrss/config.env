# ================================
# FreshRSS
# ================================

TZ: ${FRESHRSS_TIMEZONE}
CRON_MIN: '0'
TRUSTED_PROXY: 172.16.0.1/12 192.168.0.1/16 10.0.0.0/24 10.100.100.0/24

ADMIN_EMAIL=${FRESHRSS_ADMIN_EMAIL}

# Published port for development or local use (optional)
PUBLISHED_PORT=8080

# =========================================
# For automatic FreshRSS install (optional)
# =========================================

ADMIN_PASSWORD=${FRESHRSS_ADMIN_PASSWORD}
ADMIN_API_PASSWORD=${FRESHRSS_ADMIN_API_PASSWORD}

# Address at which the FreshRSS instance will be reachable:
BASE_URL=https://rss.${BASE_DOMAIN}
SERVER_DNS=rss.${BASE_DOMAIN}

# Database server (not relevant if using default SQLite)
# Use the name of the Docker container if running on the same machine
DB_HOST=freshrss-db

# ===========================================================
# Database credentials (not relevant if using default SQLite)
# ===========================================================

# Database to use
DB_BASE=freshrss

# User in the freshrss database
DB_USER=freshrss

# Password for the defined user
DB_PASSWORD=${FRESHRSS_DATABASE_PASSWORD}

# ===========================================================
# Postgres
# ===========================================================

# Postgres
POSTGRES_PASSWORD=${FRESHRSS_DATABASE_PASSWORD}
POSTGRES_USER=freshrss
POSTGRES_DB=freshrss